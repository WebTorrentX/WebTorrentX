<Window x:Class="WebTorrentX.ViewModels.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WebTorrentX.ViewModels"
        mc:Ignorable="d"
        Title="WebTorrentX"  Width="300" MinWidth="300" MaxWidth="300" Height="160" MinHeight="160" MaxHeight="160"
        WindowStartupLocation="CenterOwner" WindowStyle="ToolWindow">
    <StackPanel Orientation="Vertical">
        <Image Source="/icon.ico" Width="100" Height="100" Stretch="Fill" Margin="0"/>
        <TextBlock Text="{Binding Version}" HorizontalAlignment="Center"/>
    </StackPanel>
</Window>
